<p id="notice"><%= notice %></p>

<h1>Übersicht</h1>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="card">
        <div class="card-body">
          <h3>Gesamt</h3>
          <p>Erwartet: <%= @data.total_cost %> €</p>
          <p>Erhalten: <%= @data.total_payments %> €</p>
          <p>Differenz: <%= @data.total_payments - @data.total_cost %> €</p>
          <div style="width: 400px">
            <canvas id="totalPieChart"></canvas>
          </div>
          <script>
              var ctx = document.getElementById('totalPieChart').getContext('2d');
              var myDoughnutChart = new Chart(ctx, {
                  type: 'doughnut',
                  data: {
                      datasets: [{
                          data: [
                              <%= @data.total_cost - @data.total_payments %>,
                              <%= @data.total_payments %>,
                          ],
                          backgroundColor: [
                              '#ED561B',
                              '#50B432'
                          ]
                      }],
                      labels: [
                          'Ausstehend',
                          'Erhalten',
                      ],

                  }
              });
          </script>
        </div>
      </div>
    </div>

    <div class="col-sm">
      <div class="card">
        <div class="card-body">
          <h3>Wirtschaftsjahr 2020</h3>
          <p>Erwartet: <%= @data.current_year_cost %> €</p>
          <p>Erhalten: <%= @data.current_year_payments %> €</p>
          <p>Differenz: <%= @data.current_year_payments - @data.current_year_cost %> €</p>
          <div style="width: 400px">
            <canvas id="currentYearPieChart"></canvas>
          </div>
          <script>
              var ctx = document.getElementById('currentYearPieChart').getContext('2d');
              var myDoughnutChart = new Chart(ctx, {
                  type: 'doughnut',
                  data: {
                      datasets: [{
                          data: [
                              <%= @data.current_year_cost - @data.current_year_payments %>,
                              <%= @data.current_year_payments %>,
                          ],
                          backgroundColor: [
                              '#ED561B',
                              '#50B432'
                          ]
                      }],
                      labels: [
                          'Ausstehend',
                          'Erhalten',
                      ],

                  }
              });
          </script>
        </div>
      </div>
    </div>

    <div class="col-sm">
      <div class="card">
        <div class="card-body">
          <h3>Eine andere tolle Grafik</h3>
          <p>Mehr info</p>
        </div>
      </div>

    </div>
  </div>
</div>



