<p id="notice"><%= notice %></p>

<h1>Preise</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Jahr</th>
      <th>Monat</th>
      <th>Anteile</th>
      <th>Betrag</th>
      <th>Mitgliedschafts-ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.year %></td>
        <td><%= price.month %></td>
        <td><%= price.shares %></td>
        <td><%= price.amount %></td>
        <td><%= price.membership_id %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

