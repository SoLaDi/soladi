<h1>Zahlungen</h1>

<script type="text/javascript">
    $(document).ready(function() {
        $('#rich-table').dataTable({
            "ordering": true
        });
    });
</script>

<table id="rich-table" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Jahr</th>
      <th>Monat</th>
      <th>Betrag</th>
      <th>Mitgliedschaft</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.year %></td>
        <td><%= payment.month %></td>
        <td><%= payment.amount %></td>
        <td><%= link_to "#{payment.membership_id}", membership_url(payment.membership_id) %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <h4>Generate payments from transactions</h4>
  <%= button_to "Generate", generate_payments_path %>
</div>
<br>

<%= link_to 'New Payment', new_payment_path %>
