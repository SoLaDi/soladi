<h1>New Transaction</h1>

<%= bootstrap_form_with(model: @transaction, local: true) do |f| %>
  <%= f.text_field :status, value: 'ok' %>
  <%= f.date_field :entry_date %>
  <%= f.number_field :amount, step: :any %>
  <%= f.text_field :currency, value: 'EUR' %>
  <%= f.text_field :sender %>
  <%= f.text_field :description %>
  <%= f.text_area :status_message %>
  <%= f.text_field :membership_id %>
  <%= f.submit "Speichern" %>
<% end %>

<%= link_to 'Back', transactions_path %>
