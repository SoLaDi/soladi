<%= form_with(model: bid, local: true) do |form| %>
  <% if bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bid.errors.count, "error") %> prohibited this bid from being saved:</h2>

      <ul>
        <% bid.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Start" %>
    <%= form.date_select :start_date, :discard_day => true %>
  </div>

  <div class="form-group">
    <%= form.label "Ende" %>
    <%= form.date_select :end_date, :discard_day => true %>
  </div>

  <div class="form-group">
    <%= form.label "Betrag pro Anteil und Monat" %>
    <%= form.number_field :amount %>
  </div>

  <div class="form-group">
    <%= form.label "Anteile" %>
    <%= form.number_field :shares %>
  </div>

  <div class="form-group">
    <%= form.label "Vereinbarung unterschrieben" %>
    <%= form.check_box :contract_signed %>
  </div>

  <div class="form-group">
    <%= form.label "Mitgliedschaftsnummer" %>
    <%= form.text_field :membership_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
