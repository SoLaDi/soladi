<h1>Gebote</h1>

<script type="text/javascript">
    $(document).ready(function () {
        $('#rich-table').dataTable({
            "ordering": true,
            rowGroup: {
                dataSrc: 4
            }
        });
    });
</script>

<table id="rich-table" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Jahr</th>
    <th>Monat</th>
    <th>Anteile</th>
    <th>Betrag</th>
    <th>Mitgliedschaft</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @prices.each do |price| %>
    <tr>
      <td><%= price.year %></td>
      <td><%= price.month %></td>
      <td><%= price.shares %></td>
      <td><%= price.amount %></td>
      <td><%= link_to "#{price.membership_id}", membership_url(price.membership_id) %></td>
      <td><%= link_to 'Show', price %></td>
      <td><%= link_to 'Edit', edit_price_path(price) %></td>
      <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neues Gebot anlegen', new_price_path %>

<br>
<br>

<div>
  <h3>Gebote importieren</h3>
  <%= form_tag import_prices_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "CSV importieren" %>
  <% end %>
</div>