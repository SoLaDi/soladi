<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Jahr</th>
      <th>Monat</th>
      <th>Metrag</th>
      <th>Mitgliedschafts-ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.year %></td>
        <td><%= payment.month %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.membership_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <h4>Generate payments from transactions</h4>
  <%= button_to "Generate", generate_payments_path %>
</div>
<br>

<%= link_to 'New Payment', new_payment_path %>
