<h1>Menschen</h1>

<script type="text/javascript">
    $(document).ready(function() {
        $('#rich-table').dataTable({
            ordering: true,
            rowGroup: {
                dataSrc: 4
            }
        });
    });
</script>

<table id="rich-table" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>E-Mail</th>
      <th>Telefon</th>
      <th>Mitgliedschaft</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.surname %></td>
        <td><%= person.email %></td>
        <td><%= person.phone %></td>
        <td><%= link_to "#{person.membership_id}", membership_url(person.membership_id) %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuen Menschen anlegen', new_person_path %>
